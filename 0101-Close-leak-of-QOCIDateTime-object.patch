 src/plugins/sqldrivers/oci/qsql_oci.cpp | 1 +
 1 file changed, 1 insertion(+)

diff --git a/src/plugins/sqldrivers/oci/qsql_oci.cpp b/src/plugins/sqldrivers/oci/qsql_oci.cpp
